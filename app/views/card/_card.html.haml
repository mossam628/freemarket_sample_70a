.article.cards
  .cards__title
    支払い方法
  .cards__content
    = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
      .framing
        .item
          %label.item__title
            カード番号
          %span.item__conditions
            必須
        .inputbox
          = text_field_tag "number", "", class: "inputbox__area", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          = image_tag "credit_logo.png", size: "400x40", class: "visa"
      .framing
        .item
          %label.item__title
            有効期限
          %span.item__conditions
            必須
        .inputbox
          %select.inputbox__area.expiration
            %option{value:""}-
            %option{value:"1"}1
            %option{value:"2"}2
            %option{value:"3"}3
            %option{value:"4"}4
            %option{value:"5"}5
            %option{value:"6"}6
            %option{value:"7"}7
            %option{value:"8"}8
            %option{value:"9"}9
            %option{value:"10"}10
            %option{value:"11"}11
            %option{value:"12"}12
          月/
          %select.inputbox__area.expiration
            %option{value:""}-
            %option{value:"2020"}2020
            %option{value:"2021"}2021
            %option{value:"2022"}2022
            %option{value:"2023"}2023
            %option{value:"2024"}2024
            %option{value:"2025"}2025
            %option{value:"2026"}2026
            %option{value:"2027"}2027
            %option{value:"2028"}2028
            %option{value:"2029"}2029
            %option{value:"2030"}2030
          年
      .framing
        .item
          %label.item__title
            セキュリティコード
          %span.item__conditions
            必須
        .inputbox
          = text_field_tag "cvc", "", class: "inputbox__area", placeholder: "カード背面3~4桁の番号", maxlength: "4"
      .cards__content__area
        = submit_tag "登録する", class: "cards__content__area__btn"