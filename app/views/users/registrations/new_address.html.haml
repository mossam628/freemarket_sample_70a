.address-body
  %header.Productpurchase__header
    .Productpurchase__header__logo
      =link_to "/",class:"Productpurchase__header__logo--link" do
        =image_tag "logo.png",class: "Productpurchase__header__logo--link--img"
  .user-main
    %h2 住所情報登録
    = form_for @address, url: profile_path, method: :get do |f|
      .main-center
        .field
          = f.label :お名前（全角）
          %span 必須
          %br/
          .form-unity
            = f.text_field :first_name, class: "form-conclusion", autofocus: true, autocomplete: "first_name"
            = f.text_field :last_name, class: "form-conclusion", autofocus: true, autocomplete: "last_name"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:first_name).each do |message|
              .error= message
          - if @address.errors.any?
            - @address.errors.full_messages_for(:last_name).each do |message|
              .error= message
        .field
          = f.label :お名前カナ（全角）
          %span 必須
          %br/
          .form-unity
            = f.text_field :first_name_kana, class: "form-conclusion" ,autofocus: true, autocomplete: "first_name_kana"
            = f.text_field :last_name_kana, class: "form-conclusion", autofocus: true, autocomplete: "last_name_kana"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:first_name_kana).each do |message|
              .error= message
          - if @address.errors.any?
            - @address.errors.full_messages_for(:last_name_kana).each do |message|
              .error= message
        .field
          = f.label :郵便番号
          %span 必須
          %br/
          = f.text_field :postcode, autofocus: true, autocomplete: "postcode"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:postcode).each do |message|
              .error= message
        .field
          = f.label :都道府県
          %span 必須
          %br/
          = f.text_field :prefecture_id, autofocus: true, autocomplete: "prefecture_id"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:prefecture_id).each do |message|
              .error= message
        .field
          = f.label :市区町村
          %span 必須
          %br/
          = f.text_field :city, autofocus: true, autocomplete: "city"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:city).each do |message|
              .error= message
        .field
          = f.label :番地
          %span 必須
          %br/
          = f.text_field :block, autofocus: true, autocomplete: "block"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:block).each do |message|
              .error= message
        .field
          = f.label :マンション、ビル名、部屋番号
          %br/
          = f.text_field :building, autofocus: true, autocomplete: "building"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:building).each do |message|
              .error= message
        .field
          = f.label :お届け先電話番号
          %br/
          = f.telephone_field :phone_number, autofocus: true, autocomplete: "phone_number"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:phone_number).each do |message|
              .error= message
        .actions
          = f.submit "次へ進む"
  %footer.Productpurchase__footer
    .Productpurchase__footer__box
      %nav.Productpurchase__footerr__box__nav
      %ul.Productpurchase__footer__box__nav__clearfix
        %li
          =link_to "プライバシーポリシー","#",class:"Productpurchase__footer__box__nav__clearfix__list" 
        %li.Productpurchase__footer__nav__clearfix__list
          =link_to "フリマ利用規約","#",class:"Productpurchase__footer__box__nav__clearfix__list"
        %li.Productpurchase__footer__nav__clearfix__list
          =link_to "特定商取引に関する表記","#",class:"Productpurchase__footer__box__nav__clearfix__list" 
      =link_to "#",class:"Productpurchase__footer__box__logo" do
        =image_tag "logo.png",class: "Productpurchase__footer__box__logo--img"
      %p
        %small © Furima, Inc.

